<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/CustomAppTheme_animation</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- activity从左侧退出 右侧进入 -->
    <style name="CustomAppTheme_animation" parent="android:Animation">

        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>

        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>

        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>

        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme.Translucent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
